{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "app/src",
    "outDir": "app/dist",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"]
  },
  "filesGlob": [
    "./app/src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "exclude": [
    "app/node_modules",
    "node_modules",
    "app/jspm_packages"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
